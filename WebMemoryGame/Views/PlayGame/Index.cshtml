
@{
    ViewBag.Title = "Memory Game";
    Layout = "~/Views/PlayGame/_LayoutPlay.cshtml";
}
<div class="content">
    <h2>@ViewBag.Naslov</h2>
    @if (!ViewBag.Login)
    {
        <p>
            @Html.ActionLink("Registruj se", "Register", "PlayGame")
        </p>
        <p>
            @Html.ActionLink("Loguj se", "Login", "PlayGame")
        </p>
    }
    else
    {
        <p>
            @Html.ActionLink("Odjavi se", "Logout", "PlayGame")
        </p>
        <table>
            @for (var i = 0; i < ViewBag.Nivo; i++)
            {
                <tr>
                    @for (var j = 0; j < ViewBag.Nivo; j++)
                    {
                        <td><button>@((i * ViewBag.Nivo + j).ToString("00"))</button></td>
                    }
                </tr>
            }
        </table>
    }
</div>
